{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "FileSettings": {
    "MaxBytes": 10485760, // 10 MB
    "AllowedFileExtensions": [
      ".png",
      ".jpg",
      ".jpeg",
      ".gif",
      ".pdf"
    ],
    "AllowedImageExtensions": [
      ".png",
      ".jpg",
      ".jpeg",
      ".gif"
    ],
    "BasePath": "uploads",
    "ThumbnailWidth": 200,
    "ThumbnailHeight": 200,
    "OriginalsSubfolder": "originals",
    "ThumbnailsSubfolder": "thumbnails"
  }
}
