{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "FileSettings": {
    "MaxBytes": 10485760, // 10 MB
    "AllowedFileExtensions": [
      ".png",
      ".jpg",
      ".jpeg",
      ".gif",
      ".pdf"
    ],
    "AllowedImageExtensions": [
      ".png",
      ".jpg",
      ".jpeg",
      ".gif"
    ],
    "BasePath": "uploads",
    "PublicUrlPrefix": "images",
    "ThumbnailWidth": 200,
    "ThumbnailHeight": 200,
    "OriginalsSubfolder": "originals",
    "ThumbnailsSubfolder": "thumbnails",
    "ProductUploadsSection": "products"
  },
  "Swagger": {
    "Title": "Ombor API",
    "Version": "v1",
    "Description": "API for Inventory Management System",
    "Contact": {
      "Name": "Support Team",
      "Email": "support@ombor.uz"
    },
    "License": {
      "Name": "MIT",
      "Url": "https://opensource.org/license/mit/"
    },
    "TermsOfService": "https://ombor.uz/terms"
  }
}
